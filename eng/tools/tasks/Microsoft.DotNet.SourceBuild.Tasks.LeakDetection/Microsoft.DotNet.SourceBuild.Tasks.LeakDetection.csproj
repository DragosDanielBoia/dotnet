    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$([System.IO.Path]::GetDirectoryName('$(LeakDetectionTasksAssembly)'))</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build" Version="15.7.179" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.7.179" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Microsoft.DotNet.SourceBuild.Tasks.XPlat/Microsoft.DotNet.SourceBuild.Tasks.XPlat.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ReferencePath Include="@(SdkAssembly)" />
  </ItemGroup>

</Project>
